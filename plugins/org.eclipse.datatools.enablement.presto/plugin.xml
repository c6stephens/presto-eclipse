<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.datatools.connectivity.driverExtension">
      <category
            description="%driver.category.description"
            id="org.eclipse.datatools.enablement.presto.driver.category"
            name="%driver.category.name"
            parentCategory="org.eclipse.datatools.connectivity.db.driverCategory"/>
      <category
            description="%driver.version.category.description"
            id="org.eclipse.datatools.enablement.presto.0_x.category"
            name="%driver.version.category.name"
            parentCategory="org.eclipse.datatools.enablement.presto.driver.category"/>
      <driverTemplate
            createDefault="false"
            description="%driver.description"
            emptyJarListIsOK="false"
            id="org.eclipse.datatools.enablement.presto.0_x.driver"
            jarList="presto-jdbc-0.74.jar"
            name="%driver.name"
            parentCategory="org.eclipse.datatools.enablement.presto.0_x.category">
         <properties>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.driverClass"
                  name="%DRIVER_CLASS_PROPERTY_NAME"
                  value="com.facebook.presto.jdbc.PrestoDriver"
                  required="true"
                  visible="false"/>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.vendor"
                  name="%VENDOR_PROPERTY_NAME"
                  value="Presto"
                  required="true"
                  visible="false"/>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.version"
                  name="%VERSION_PROPERTY_NAME"
                  value="0.x"
                  required="true"
                  visible="false"/>   
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.databaseName"
                  name="%DATABASE_NAME_PROPERTY_NAME"
                  value="default"
                  required="false"
                  visible="false"/>                             
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.URL"
                  name="%CONNECTION_URL_PROPERTY_NAME"
                  value=""
                  required="false"
                  visible="true"/>
            <property
                  generated="false"
                  id="org.eclipse.datatools.connectivity.db.username"
                  name="%USER_ID_PROPERTY_NAME"
                  value=""
                  required="false"
                  visible="true"/>
         </properties>
      </driverTemplate>
   </extension>

   <extension
         point="org.eclipse.datatools.connectivity.connectionProfile">
      <connectionFactory
            class="org.eclipse.datatools.enablement.presto.connection.PrestoJDBCConnectionFactory"
            id="java.sql.Connection"
            name="%connection.factory"
            profile="org.eclipse.datatools.enablement.presto.connectionProfile"/>
      <connectionProfile
            category="org.eclipse.datatools.connectivity.db.category"
            icon="icons/jdbc_16.gif"
            id="org.eclipse.datatools.enablement.presto.connectionProfile"
            name="%connection.profile"
            pingFactory="org.eclipse.datatools.enablement.presto.connection.PrestoJDBCConnectionFactory"/>
   </extension>
   <extension
         point="org.eclipse.datatools.connectivity.sqm.core.mappings">
      <providerIDtoDriverCategoryID
            driverCategoryID="org.eclipse.datatools.enablement.presto.driver.category"
            providerID="org.eclipse.datatools.enablement.presto.connectionProfile">
      </providerIDtoDriverCategoryID>
   </extension>
   <extension
         point="org.eclipse.datatools.connectivity.sqm.core.catalog">
      <overrideLoader
            provider="org.eclipse.datatools.enablement.presto.catalog.PrestoSchemaLoader"
            eclass="org.eclipse.datatools.modelbase.sql.schema.Schema"
            product="Presto"
            version="0.x"/>
   </extension>
</plugin>
